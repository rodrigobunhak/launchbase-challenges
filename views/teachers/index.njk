{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <table width="100%">
        <thead>
            <th>Name</th>
            <th>Acompanhamentos</th>
            <th>Ação</th>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.name }}</td>
                <td>{{ teacher.acompanhamentos }}</td>
                <td><a href="/teachers/{{ teacher.id }}">Ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}