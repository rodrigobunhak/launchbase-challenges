{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="avatar" style="background:url({{ student.avatar_url }}) no-repeat center / cover"></section>
    <section class="details">
        {# <h3>Detalhes</h3> #}

        <div class="item">
            <div>Nome Completo</div>
            <div>{{ student.name }}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{ student.birth_date }}</div>
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>{{ student.mail }}</div>
        </div>

        <div class="item">
            <div>Grade</div>
            <div>{{ student.grade }}</div>
        </div>

        <div class="item">
            <div>Carga Horária Semanal</div>
            <div>{{ student.weekly_workload }}</div>
        </div>

        <div class="item">
            <div>Aniversário</div>
            <div>{{ student.birth }}</div>
        </div>



        <a href="/students/{{ student.id }}/edit" class="button">Editar</a>
    </section>
</div>

{% endblock content %}